<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_rocks_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:scaleY="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stone_wall" />

    <ImageView
        android:id="@+id/image_text_gath_rocks_border"
        android:layout_width="270dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_rocks_background"
        app:layout_constraintEnd_toEndOf="@+id/image_rocks_background"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="@+id/button_gath_rocks"
        app:layout_constraintTop_toBottomOf="@+id/progress_gath_rocks"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@drawable/red_bar" />

    <TextView
        android:id="@+id/text_gath_rocks"
        android:layout_width="220dp"
        android:layout_height="24dp"
        android:background="@drawable/rounded_rectangle"
        android:ems="10"
        android:gravity="bottom|center_horizontal"
        android:inputType="none"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="sans"
        app:fontFamily="serif"
        app:layout_constraintBottom_toBottomOf="@+id/image_text_gath_rocks_border"
        app:layout_constraintEnd_toEndOf="@+id/image_text_gath_rocks_border"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="@+id/image_text_gath_rocks_border"
        app:layout_constraintTop_toTopOf="@+id/image_text_gath_rocks_border"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/image_progress_gath_rocks_border"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_rocks_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/image_button_gath_rocks_border"
        app:layout_constraintTop_toTopOf="@+id/image_rocks_background"
        app:layout_constraintVertical_bias="0.35"
        app:srcCompat="@drawable/red_bar" />

    <ProgressBar
        android:id="@+id/progress_gath_rocks"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="260dp"
        android:layout_height="25dp"
        android:background="@drawable/red_bar"
        android:foregroundGravity="fill_horizontal"
        android:progressDrawable="@drawable/progressbar"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="@+id/image_progress_gath_rocks_border"
        app:layout_constraintEnd_toEndOf="@+id/image_progress_gath_rocks_border"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/image_progress_gath_rocks_border"
        app:layout_constraintTop_toTopOf="@+id/image_progress_gath_rocks_border"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/image_button_gath_rocks_border"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_rocks_background"
        app:layout_constraintEnd_toEndOf="@+id/image_rocks_background"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/image_rocks_background"
        app:layout_constraintTop_toTopOf="@+id/image_rocks_background"
        app:layout_constraintVertical_bias="0.516"
        app:srcCompat="@drawable/red_circle" />

    <ImageButton
        android:id="@+id/button_gath_rocks"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:background="@drawable/rounded_button"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="@+id/image_button_gath_rocks_border"
        app:layout_constraintEnd_toEndOf="@+id/image_button_gath_rocks_border"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/image_button_gath_rocks_border"
        app:layout_constraintTop_toTopOf="@+id/image_button_gath_rocks_border"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/sticks" />

    <ImageView
        android:id="@+id/image_sticks_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:scaleY="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stone_wall" />

    <ImageView
        android:id="@+id/image_text_gath_sticks_border"
        android:layout_width="270dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_sticks_background"
        app:layout_constraintEnd_toEndOf="@+id/image_sticks_background"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="@+id/button_gath_sticks"
        app:layout_constraintTop_toBottomOf="@+id/progress_gath_sticks"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@drawable/red_bar" />

    <TextView
        android:id="@+id/text_gath_sticks"
        android:layout_width="220dp"
        android:layout_height="24dp"
        android:background="@drawable/rounded_rectangle"
        android:ems="10"
        android:gravity="bottom|center_horizontal"
        android:inputType="none"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="sans"
        app:fontFamily="serif"
        app:layout_constraintBottom_toBottomOf="@+id/image_text_gath_sticks_border"
        app:layout_constraintEnd_toEndOf="@+id/image_text_gath_sticks_border"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="@+id/image_text_gath_sticks_border"
        app:layout_constraintTop_toTopOf="@+id/image_text_gath_sticks_border"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/image_progress_gath_sticks_border"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_sticks_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/image_button_gath_sticks_border"
        app:layout_constraintTop_toTopOf="@+id/image_sticks_background"
        app:layout_constraintVertical_bias="0.35"
        app:srcCompat="@drawable/red_bar" />

    <ProgressBar
        android:id="@+id/progress_gath_sticks"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="260dp"
        android:layout_height="25dp"
        android:background="@drawable/red_bar"
        android:foregroundGravity="fill_horizontal"
        android:progressDrawable="@drawable/progressbar"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="@+id/image_progress_gath_sticks_border"
        app:layout_constraintEnd_toEndOf="@+id/image_progress_gath_sticks_border"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/image_progress_gath_sticks_border"
        app:layout_constraintTop_toTopOf="@+id/image_progress_gath_sticks_border"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/image_button_gath_sticks_border"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_sticks_background"
        app:layout_constraintEnd_toEndOf="@+id/image_sticks_background"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/image_sticks_background"
        app:layout_constraintTop_toTopOf="@+id/image_sticks_background"
        app:layout_constraintVertical_bias="0.516"
        app:srcCompat="@drawable/red_circle" />

    <ImageButton
        android:id="@+id/button_gath_sticks"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:background="@drawable/rounded_button"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="@+id/image_button_gath_sticks_border"
        app:layout_constraintEnd_toEndOf="@+id/image_button_gath_sticks_border"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/image_button_gath_sticks_border"
        app:layout_constraintTop_toTopOf="@+id/image_button_gath_sticks_border"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/sticks" />

</androidx.constraintlayout.widget.ConstraintLayout>