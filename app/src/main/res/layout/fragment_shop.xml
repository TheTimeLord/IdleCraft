<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/module_sticks"
            android:layout_width="409dp"
            android:layout_height="125dp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_store_sticks_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/stone_wall" />

            <ImageView
                android:id="@+id/image_text_store_sticks_border"
                android:layout_width="270dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="@id/image_store_sticks_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.531"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/image_store_sticks_background"
                app:layout_constraintVertical_bias="0.659"
                app:srcCompat="@drawable/red_bar" />

            <ImageView
                android:id="@+id/image_progress_store_sticks_border"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginEnd="36dp"
                android:layout_marginRight="36dp"
                app:layout_constraintBottom_toBottomOf="@id/image_store_sticks_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/image_store_sticks_background"
                app:layout_constraintVertical_bias="0.303"
                app:srcCompat="@drawable/red_bar" />

            <Button
                android:id="@+id/button_store_sticks_max_buy"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:background="@drawable/rounded_rectangle"
                android:ems="10"
                android:gravity="bottom|center_horizontal"
                android:inputType="none"
                android:text="Max inv"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:typeface="sans"
                app:layout_constraintBottom_toTopOf="@+id/image_text_store_sticks_border"
                app:layout_constraintEnd_toEndOf="@+id/image_progress_store_sticks_border"
                app:layout_constraintHorizontal_bias="0.21"
                app:layout_constraintStart_toStartOf="@+id/image_progress_store_sticks_border"
                app:layout_constraintTop_toTopOf="@+id/image_progress_store_sticks_border"
                app:layout_constraintVertical_bias="0.9" />

            <Button
                android:id="@+id/button_store_sticks_rate_buy"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:background="@drawable/rounded_rectangle"
                android:ems="10"
                android:gravity="bottom|center_horizontal"
                android:inputType="none"
                android:text="Speed"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:typeface="sans"
                app:layout_constraintBottom_toBottomOf="@id/image_text_store_sticks_border"
                app:layout_constraintEnd_toEndOf="@id/image_text_store_sticks_border"
                app:layout_constraintHorizontal_bias="0.243"
                app:layout_constraintStart_toStartOf="@id/image_text_store_sticks_border"
                app:layout_constraintTop_toTopOf="@id/image_text_store_sticks_border"
                app:layout_constraintVertical_bias="0.545" />

            <ImageView
                android:id="@+id/image_button_store_sticks_border"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="@id/image_store_sticks_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/image_store_sticks_background"
                app:srcCompat="@drawable/red_circle" />

            <ImageButton
                android:id="@+id/button_craft_spear"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/rounded_button"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleX="1"
                android:scaleY="1"
                app:layout_constraintBottom_toBottomOf="@id/image_button_store_sticks_border"
                app:layout_constraintEnd_toEndOf="@id/image_button_store_sticks_border"
                app:layout_constraintStart_toStartOf="@id/image_button_store_sticks_border"
                app:layout_constraintTop_toTopOf="@id/image_button_store_sticks_border"
                app:srcCompat="@drawable/sticks" />

            <TextView
                android:id="@+id/text_store_sticks_count"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/simple_background"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:text="1"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:fontFamily="serif"
                app:layout_constraintBottom_toBottomOf="@id/image_store_sticks_background"
                app:layout_constraintEnd_toEndOf="@id/image_store_sticks_background"
                app:layout_constraintTop_toTopOf="@id/image_store_sticks_background"
                app:layout_constraintVertical_bias="0.457" />

            <Button
                android:id="@+id/button_store_sticks_count_inc"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/green_bg"
                android:text="+"
                android:textStyle="bold"
                android:typeface="sans"
                app:fontFamily="serif"
                app:layout_constraintBottom_toBottomOf="@id/image_store_sticks_background"
                app:layout_constraintEnd_toEndOf="@id/image_store_sticks_background"
                app:layout_constraintHorizontal_bias="0.853"
                app:layout_constraintStart_toStartOf="@id/image_store_sticks_background"
                app:layout_constraintTop_toTopOf="@id/image_store_sticks_background"
                app:layout_constraintVertical_bias="0.287" />

            <Button
                android:id="@+id/button_store_sticks_count_dec"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:background="@drawable/red_bg"
                android:text="-"
                android:textStyle="bold"
                android:typeface="sans"
                app:fontFamily="serif"
                app:layout_constraintBottom_toBottomOf="@id/image_store_sticks_background"
                app:layout_constraintEnd_toEndOf="@id/image_store_sticks_background"
                app:layout_constraintHorizontal_bias="0.853"
                app:layout_constraintStart_toStartOf="@id/image_store_sticks_background"
                app:layout_constraintTop_toTopOf="@id/image_store_sticks_background"
                app:layout_constraintVertical_bias="0.659" />

            <TextView
                android:id="@+id/text_store_sticks_max"
                android:layout_width="89dp"
                android:layout_height="31dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="92dp"
                android:background="@drawable/simple_background"
                android:ems="10"
                android:gravity="center"
                android:inputType="none"
                android:text="0"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:fontFamily="serif"
                app:layout_constraintBottom_toBottomOf="@id/image_store_sticks_background"
                app:layout_constraintStart_toStartOf="@id/image_store_sticks_background" />

            <TextView
                android:id="@+id/text_store_sticks_speed"
                android:layout_width="89dp"
                android:layout_height="31dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/simple_background"
                android:ems="10"
                android:gravity="center"
                android:inputType="none"
                android:text="0"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:fontFamily="serif"
                app:layout_constraintBottom_toBottomOf="@id/image_store_sticks_background"
                app:layout_constraintStart_toStartOf="@id/image_store_sticks_background" />

            <TextView
                android:id="@+id/text_store_sticks_cost_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="$0"
                app:layout_constraintBottom_toBottomOf="@+id/image_progress_store_sticks_border"
                app:layout_constraintEnd_toEndOf="@+id/image_progress_store_sticks_border"
                app:layout_constraintHorizontal_bias="0.66"
                app:layout_constraintStart_toStartOf="@+id/image_progress_store_sticks_border"
                app:layout_constraintTop_toTopOf="@+id/image_progress_store_sticks_border"
                app:layout_constraintVertical_bias="0.38" />

            <TextView
                android:id="@+id/text_store_sticks_cost_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="$0"
                app:layout_constraintBottom_toBottomOf="@+id/image_text_store_sticks_border"
                app:layout_constraintEnd_toEndOf="@+id/image_text_store_sticks_border"
                app:layout_constraintHorizontal_bias="0.732"
                app:layout_constraintStart_toStartOf="@+id/image_text_store_sticks_border"
                app:layout_constraintTop_toTopOf="@+id/image_text_store_sticks_border"
                app:layout_constraintVertical_bias="0.52" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>