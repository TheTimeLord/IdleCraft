<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/border_inv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/currency_bar" />

        <TextView
            android:id="@+id/text_inv_money"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:textSize="23sp"
            android:textStyle="bold|italic"
            app:fontFamily="serif"
            app:layout_constraintBottom_toBottomOf="@+id/border_inv_money"
            app:layout_constraintEnd_toEndOf="@+id/border_inv_money"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/border_inv_money"
            app:layout_constraintTop_toTopOf="@+id/border_inv_money"
            app:layout_constraintVertical_bias="0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/module_sticks"
            android:layout_width="409dp"
            android:layout_height="130dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/border_inv_money">

            <ImageView
                android:id="@+id/image_inv_sticks_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:saveEnabled="false"
                android:scaleY="1.15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/inv_background" />

            <ImageView
                android:id="@+id/border_inv_sticks_quan"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:scaleX="0.45"
                android:scaleY="1.8"
                app:layout_constraintBottom_toBottomOf="@+id/image_inv_sticks_background"
                app:layout_constraintEnd_toEndOf="@+id/image_inv_sticks_background"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/image_inv_sticks_background"
                app:layout_constraintTop_toTopOf="@id/image_inv_sticks_background"
                app:srcCompat="@drawable/red_bar" />

            <TextView
                android:id="@+id/text_inv_sticks_quan"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/rounded_rectangle_less"
                android:ems="10"
                android:gravity="bottom|center_horizontal"
                android:inputType="none"
                android:textAllCaps="false"
                android:textSize="19sp"
                android:textStyle="bold|italic"
                android:typeface="sans"
                app:fontFamily="serif"
                app:layout_constraintBottom_toBottomOf="@+id/border_inv_sticks_quan"
                app:layout_constraintEnd_toEndOf="@+id/border_inv_sticks_quan"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/image_inv_sticks_icon"
                app:layout_constraintTop_toTopOf="@+id/border_inv_sticks_quan" />

            <ImageView
                android:id="@+id/border_inv_sticks_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/image_inv_sticks_background"
                app:layout_constraintEnd_toEndOf="@+id/image_inv_sticks_background"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toStartOf="@+id/border_inv_sticks_quan"
                app:layout_constraintTop_toTopOf="@id/image_inv_sticks_background"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/red_circle" />

            <ImageView
                android:id="@+id/image_inv_sticks_icon"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:background="@drawable/rounded_button"
                android:scaleX="1"
                android:scaleY="1"
                app:layout_constraintBottom_toBottomOf="@+id/border_inv_sticks_icon"
                app:layout_constraintEnd_toEndOf="@+id/border_inv_sticks_icon"
                app:layout_constraintStart_toStartOf="@+id/border_inv_sticks_icon"
                app:layout_constraintTop_toTopOf="@+id/border_inv_sticks_icon"
                app:srcCompat="@drawable/sticks" />

            <ImageButton
                android:id="@+id/button_inv_sticks_buy"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleY="1.07"
                app:layout_constraintBottom_toBottomOf="@+id/border_inv_sticks_buy_price"
                app:layout_constraintEnd_toEndOf="@+id/image_inv_sticks_background"
                app:layout_constraintHorizontal_bias="0.223"
                app:layout_constraintStart_toStartOf="@+id/border_inv_sticks_buy_price"
                app:layout_constraintTop_toTopOf="@+id/border_inv_sticks_buy_price"
                app:layout_constraintVertical_bias="0.7"
                app:srcCompat="@drawable/buy_label" />

            <ImageButton
                android:id="@+id/button_inv_sticks_sell"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleY="1.07"
                app:layout_constraintBottom_toBottomOf="@+id/border_inv_sticks_sell_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.462"
                app:layout_constraintStart_toStartOf="@+id/border_inv_sticks_sell_price"
                app:layout_constraintTop_toTopOf="@+id/border_inv_sticks_sell_price"
                app:layout_constraintVertical_bias="0.57"
                app:srcCompat="@drawable/sell_label" />

            <ImageView
                android:id="@+id/border_inv_sticks_buy_price"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:layout_constraintBottom_toBottomOf="@+id/image_inv_sticks_background"
                app:layout_constraintEnd_toEndOf="@+id/image_inv_sticks_background"
                app:layout_constraintHorizontal_bias="0.567"
                app:layout_constraintStart_toStartOf="@+id/image_inv_sticks_background"
                app:layout_constraintTop_toTopOf="@+id/image_inv_sticks_background"
                app:layout_constraintVertical_bias="0.025"
                app:srcCompat="@drawable/red_button1" />

            <TextView
                android:id="@+id/text_inv_sticks_buy_price"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:background="@drawable/square_rounded_green"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:fontFamily="serif"
                app:layout_constraintBottom_toBottomOf="@+id/border_inv_sticks_buy_price"
                app:layout_constraintEnd_toEndOf="@+id/border_inv_sticks_buy_price"
                app:layout_constraintStart_toStartOf="@+id/border_inv_sticks_buy_price"
                app:layout_constraintTop_toTopOf="@+id/border_inv_sticks_buy_price" />

            <ImageView
                android:id="@+id/border_inv_sticks_sell_price"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:layout_constraintBottom_toBottomOf="@+id/image_inv_sticks_background"
                app:layout_constraintEnd_toEndOf="@+id/image_inv_sticks_background"
                app:layout_constraintHorizontal_bias="0.567"
                app:layout_constraintStart_toStartOf="@+id/image_inv_sticks_background"
                app:layout_constraintTop_toTopOf="@id/image_inv_sticks_background"
                app:layout_constraintVertical_bias="0.86"
                app:srcCompat="@drawable/red_button1" />

            <TextView
                android:id="@+id/text_inv_sticks_sell_price"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:background="@drawable/square_rounded_green"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:fontFamily="serif"
                app:layout_constraintBottom_toBottomOf="@+id/border_inv_sticks_sell_price"
                app:layout_constraintEnd_toEndOf="@+id/border_inv_sticks_sell_price"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintStart_toStartOf="@+id/border_inv_sticks_sell_price"
                app:layout_constraintTop_toTopOf="@+id/border_inv_sticks_sell_price"
                app:layout_constraintVertical_bias="0.55" />

            <ImageView
                android:id="@+id/border_inv_sticks_trade_amount"
                android:layout_width="53dp"
                android:layout_height="53dp"
                app:layout_constraintBottom_toBottomOf="@+id/image_inv_sticks_background"
                app:layout_constraintEnd_toEndOf="@+id/image_inv_sticks_background"
                app:layout_constraintHorizontal_bias="0.969"
                app:layout_constraintStart_toStartOf="@+id/image_inv_sticks_background"
                app:layout_constraintTop_toTopOf="@id/image_inv_sticks_background"
                app:layout_constraintVertical_bias="0.43"
                app:srcCompat="@drawable/red_button1" />

            <TextView
                android:id="@+id/text_inv_sticks_trade_amount"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/square_rounded_green"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:fontFamily="serif"
                app:layout_constraintBottom_toBottomOf="@+id/border_inv_sticks_trade_amount"
                app:layout_constraintEnd_toEndOf="@+id/border_inv_sticks_trade_amount"
                app:layout_constraintStart_toStartOf="@+id/border_inv_sticks_trade_amount"
                app:layout_constraintTop_toTopOf="@+id/border_inv_sticks_trade_amount" />

            <ImageButton
                android:id="@+id/button_inv_sticks_minus"
                android:layout_width="53dp"
                android:layout_height="25dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/minus_button"
                app:layout_constraintBottom_toBottomOf="@+id/image_inv_sticks_background"
                app:layout_constraintEnd_toEndOf="@+id/border_inv_sticks_trade_amount"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="@+id/border_inv_sticks_trade_amount"
                app:layout_constraintTop_toBottomOf="@+id/text_inv_sticks_trade_amount"
                app:layout_constraintVertical_bias="0.25" />

            <ImageButton
                android:id="@+id/button_inv_sticks_plus"
                android:layout_width="53dp"
                android:layout_height="25dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/plus_button"
                app:layout_constraintBottom_toTopOf="@+id/text_inv_sticks_trade_amount"
                app:layout_constraintEnd_toEndOf="@+id/border_inv_sticks_trade_amount"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/border_inv_sticks_trade_amount"
                app:layout_constraintTop_toTopOf="@id/image_inv_sticks_background"
                app:layout_constraintVertical_bias="0.714" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>