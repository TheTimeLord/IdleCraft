<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_inv_money_cnt"
        android:layout_width="133dp"
        android:layout_height="41dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <ImageView
        android:id="@+id/image_text_inv_sticks_border"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:scaleX="0.52"
        android:scaleY="1.8"
        app:layout_constraintBottom_toBottomOf="@+id/image_sell_sticks_background"
        app:layout_constraintEnd_toEndOf="@+id/button_sell_sticks"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/button_sell_sticks"
        app:layout_constraintTop_toTopOf="@+id/image_sell_sticks_background"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/red_bar" />

    <TextView
        android:id="@+id/text_inv_sticks_cnt"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_rectangle_less"
        android:ems="10"
        android:gravity="bottom|center_horizontal"
        android:inputType="none"
        android:text="0/10\nsticks"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="sans"
        app:fontFamily="serif"
        app:layout_constraintBottom_toBottomOf="@+id/image_text_inv_sticks_border"
        app:layout_constraintEnd_toEndOf="@+id/image_text_inv_sticks_border"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/image_text_inv_sticks_border"
        app:layout_constraintTop_toTopOf="@+id/image_text_inv_sticks_border"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/image_sell_sticks_background"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_sticks_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.516"
        app:srcCompat="@drawable/red_circle" />

    <ImageButton
        android:id="@+id/button_sell_sticks"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:background="@drawable/rounded_button"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="@+id/image_sell_sticks_background"
        app:layout_constraintEnd_toEndOf="@+id/image_sell_sticks_background"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/image_sell_sticks_background"
        app:layout_constraintTop_toTopOf="@+id/image_sell_sticks_background"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/sticks" />

    <ImageView
        android:id="@+id/image_sell_sticks_icon"
        android:layout_width="117dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_sell_sticks"
        app:layout_constraintEnd_toEndOf="@+id/button_sell_sticks"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/button_sell_sticks"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/sell_label" />

</androidx.constraintlayout.widget.ConstraintLayout>