<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_craft_spear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids=",image_craft_spear_background,text_craft_spear_req2,button_craft_spear,button_craft_spear_count_inc,image_text_craft_spear_border,button_craft_spear_count_dec,text_craft_spear_craft_count,image_button_craft_spear_border,text_craft_spear_req1,image_progress_craft_spear_border,progress_craft_spear,text_craft_spear_title" />

        <ImageView
            android:id="@+id/image_craft_spear_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/stone_wall" />

        <ImageView
            android:id="@+id/image_text_craft_spear_border"
            android:layout_width="270dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_craft_spear_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_craft_spear_background"
            app:layout_constraintVertical_bias="0.659"
            app:srcCompat="@drawable/red_bar" />

        <TextView
            android:id="@+id/text_craft_spear_req1"
            android:layout_width="110dp"
            android:layout_height="24dp"
            android:background="@drawable/rounded_rectangle"
            android:ems="10"
            android:gravity="bottom|center_horizontal"
            android:inputType="none"
            android:text="x5 rocks"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:typeface="sans"
            app:fontFamily="serif"
            app:layout_constraintBottom_toBottomOf="@+id/image_text_craft_spear_border"
            app:layout_constraintEnd_toEndOf="@+id/image_text_craft_spear_border"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="@+id/image_text_craft_spear_border"
            app:layout_constraintTop_toTopOf="@+id/image_text_craft_spear_border"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/text_craft_spear_req2"
            android:layout_width="110dp"
            android:layout_height="24dp"
            android:background="@drawable/rounded_rectangle"
            android:ems="10"
            android:gravity="bottom|center_horizontal"
            android:inputType="none"
            android:text="x5 sticks"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:typeface="sans"
            app:fontFamily="serif"
            app:layout_constraintBottom_toBottomOf="@+id/image_text_craft_spear_border"
            app:layout_constraintEnd_toEndOf="@+id/image_text_craft_spear_border"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="@+id/image_text_craft_spear_border"
            app:layout_constraintTop_toTopOf="@+id/image_text_craft_spear_border"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/image_progress_craft_spear_border"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_craft_spear_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_craft_spear_background"
            app:layout_constraintVertical_bias="0.303"
            app:srcCompat="@drawable/red_bar" />

        <ProgressBar
            android:id="@+id/progress_craft_spear"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="25dp"
            android:background="@drawable/red_bar"
            android:foregroundGravity="fill_horizontal"
            android:progressDrawable="@drawable/progressbar"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="@+id/image_progress_craft_spear_border"
            app:layout_constraintEnd_toEndOf="@+id/image_progress_craft_spear_border"
            app:layout_constraintStart_toStartOf="@+id/image_progress_craft_spear_border"
            app:layout_constraintTop_toTopOf="@+id/image_progress_craft_spear_border" />

        <ImageView
            android:id="@+id/image_button_craft_spear_border"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_craft_spear_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_craft_spear_background"
            app:srcCompat="@drawable/red_circle" />

        <ImageButton
            android:id="@+id/button_craft_spear"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:background="@drawable/rounded_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="@+id/image_button_craft_spear_border"
            app:layout_constraintEnd_toEndOf="@+id/image_button_craft_spear_border"
            app:layout_constraintStart_toStartOf="@+id/image_button_craft_spear_border"
            app:layout_constraintTop_toTopOf="@+id/image_button_craft_spear_border"
            app:srcCompat="@drawable/sticks" />

        <TextView
            android:id="@+id/text_craft_spear_title"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/simple_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="none"
            android:text="Spear"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="serif"
            app:layout_constraintBottom_toBottomOf="@+id/image_craft_spear_background"
            app:layout_constraintStart_toStartOf="@+id/image_craft_spear_background"
            app:layout_constraintTop_toTopOf="@+id/image_craft_spear_background"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/text_craft_spear_craft_count"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/simple_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="none"
            android:text="4"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="serif"
            app:layout_constraintBottom_toBottomOf="@+id/image_craft_spear_background"
            app:layout_constraintEnd_toEndOf="@+id/image_craft_spear_background"
            app:layout_constraintTop_toTopOf="@+id/image_craft_spear_background"
            app:layout_constraintVertical_bias="0.457" />

        <Button
            android:id="@+id/button_craft_spear_count_inc"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/green_bg"
            android:text="+"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="serif"
            app:layout_constraintBottom_toBottomOf="@+id/image_craft_spear_background"
            app:layout_constraintEnd_toEndOf="@+id/image_craft_spear_background"
            app:layout_constraintHorizontal_bias="0.853"
            app:layout_constraintStart_toStartOf="@+id/image_craft_spear_background"
            app:layout_constraintTop_toTopOf="@+id/image_craft_spear_background"
            app:layout_constraintVertical_bias="0.287" />

        <Button
            android:id="@+id/button_craft_spear_count_dec"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/red_bg"
            android:text="-"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="serif"
            app:layout_constraintBottom_toBottomOf="@+id/image_craft_spear_background"
            app:layout_constraintEnd_toEndOf="@+id/image_craft_spear_background"
            app:layout_constraintHorizontal_bias="0.853"
            app:layout_constraintStart_toStartOf="@+id/image_craft_spear_background"
            app:layout_constraintTop_toTopOf="@+id/image_craft_spear_background"
            app:layout_constraintVertical_bias="0.659" />

        <Button
            android:id="@+id/button_hide_craft_spear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="164dp"
            android:background="@drawable/simple_background"
            android:text="Hide"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_craft_spear_count"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/simple_background"
            android:ems="10"
            android:gravity="center"
            android:inputType="none"
            android:text="0"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="serif"
            app:layout_constraintBottom_toBottomOf="@+id/image_craft_spear_background"
            app:layout_constraintStart_toStartOf="@+id/image_craft_spear_background"
            app:layout_constraintTop_toBottomOf="@+id/text_craft_spear_title"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
